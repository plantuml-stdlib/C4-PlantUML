' ##################################

!unquoted procedure Lay_D(e_from, e_to)
    e_from -[hidden]D- e_to
!endprocedure

!unquoted procedure Lay_U(e_from, e_to)
    e_from -[hidden]U- e_to
!endprocedure

!unquoted procedure Lay_R(e_from, e_to)
